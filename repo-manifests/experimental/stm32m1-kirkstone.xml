<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Clarify which is the release upstream repositories refer to -->
  <default revision="kirkstone" sync-j="4"/>

  <!-- Remote references to repositories - potentially more than needed -->

  <remote name="github" fetch="ssh://git@github.com"/>
  <remote name="ams" fetch="ssh://git@github.com/almedso"/>
  <remote name="oe" fetch="ssh://git@github.com/openembedded"/>
  <remote name="OpenSTLinux" fetch="ssh://git@github.com/STMicroelectronics"/>
  <remote name="yocto" fetch="https://git.yoctoproject.org"/>

  <!-- almedso opensource projects -->
  <project name="yocto-ams" revision="master" path="sources/ams" remote="ams">
    <copyfile dest="README.md" src="README.md"/>
	<linkfile dest="stm32m1-init-build-env" src="scripts/ams-init-build-env"/>
  </project>

  <!-- Yocto Core -->
  <project name="poky" remote="yocto" path="sources/poky"/>
  <project name="meta-openembedded" remote="oe" path="sources/meta-openembedded"/>
	  <!-- Poky is a superset of openembedded core that makes sence if you base your distro on poky -->
	  <!-- go with a fixed sha-1 within the kirkstone branch that refers to gstreamer*20.3 instated of *20.5
	       to please bbappends in meta-st-openstlinux -->
  <project name="openembedded-core" path="sources/openembedded-core" remote="oe" revision="f7766da462905ec67bf549d46b8017be36cd5b2a"/>
  <project name="bitbake" path="sources/openembedded-core/bitbake" remote="oe" revision="2.0" />

  <!-- BSP specific layers -->
  <project name="meta-st-openstlinux" remote="OpenSTLinux" path="sources/meta-st/meta-st-openstlinux" />
  <project name="meta-st-scripts" remote="OpenSTLinux" path="sources/meta-st/scripts" />
  <project name="meta-st-stm32mp" remote="OpenSTLinux" path="sources/meta-st/meta-st-stm32mp" />
  <project name="meta-st-stm32mp-addons" remote="OpenSTLinux" path="sources/meta-st/meta-st-stm32mp-addons" />

  <!-- Middleware and arbitrary layers -->
  <project name="meta-qt5/meta-qt5" path="sources/meta-qt5" remote="github" />
</manifest>
